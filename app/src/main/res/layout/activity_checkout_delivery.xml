<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f5f5f8"
    tools:context=".Activities.CheckoutDeliveryActivity">

    <TextView
        android:id="@+id/checkoutTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Checkout"
        android:textSize="30sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_food_back" />

    <TextView
        android:id="@+id/deliveryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="350dp"
        android:layout_marginBottom="33dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Delivery"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkoutTitle" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="45dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Address details"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/layoutAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deliveryTitle"
        app:layout_constraintVertical_bias="0.714" />

    <TextView
        android:id="@+id/payment_btn"
        android:layout_width="314dp"
        android:layout_height="70dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rectangle_background"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center"
        android:text="Proceed to payment"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/layoutAddress"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/rectangle_background"
        android:backgroundTint="#A4B1A2A2"
        android:fontFamily="@font/nunito_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameCus"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#A4B1A2A2"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="left|center"
        android:hint="Name"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/layoutAddress"
        app:layout_constraintTop_toTopOf="@+id/layoutAddress" />

    <EditText
        android:id="@+id/addrCus"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:backgroundTint="#A4B1A2A2"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:hint="Address"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/nameCus"
        app:layout_constraintStart_toStartOf="@+id/layoutAddress"
        tools:layout_editor_absoluteX="59dp" />

    <EditText
        android:id="@+id/phoneCus"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:backgroundTint="#A4B1A2A2"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:hint="Phone"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/layoutAddress"
        app:layout_constraintTop_toBottomOf="@+id/addrCus"
        tools:layout_editor_absoluteX="59dp" />


    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_semibold"
        android:paddingTop="170dp"
        android:text="Total:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/address"
        app:layout_constraintTop_toBottomOf="@+id/layoutAddress"
        tools:layout_editor_absoluteY="400dp" />

    <TextView
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/nunito_semibold"
        android:paddingTop="170dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/layoutAddress"
        app:layout_constraintTop_toBottomOf="@+id/layoutAddress"
        tools:layout_editor_absoluteY="400dp" />



</androidx.constraintlayout.widget.ConstraintLayout>