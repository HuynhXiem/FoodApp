<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f5f5f8"
    tools:context=".Activities.CheckoutActivity">

    <TextView
        android:id="@+id/checkoutTitle"
        tools:ignore="MissingConstraints"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Checkout"
        android:textColor="@color/black" />

    <ImageButton
        android:id="@+id/back_btn2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_food_back" />

    <TextView
        android:id="@+id/deliveryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="350dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Delivery"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="84dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_semibold"
        android:text="address"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="157dp"
        tools:text="Address details" />

    <TextView
        android:id="@+id/payment_btn"
        android:layout_width="314dp"
        android:layout_height="70dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rectangle_background"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center"
        android:text="Proceed to payment"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/change_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="540dp"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center"
        android:text="change"
        android:textColor="#FF9800"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.707"
        app:layout_constraintStart_toEndOf="@+id/address" />

    <TextView
        android:id="@+id/layoutAddress"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="@drawable/rectangle_background"
        android:backgroundTint="#A4B1A2A2"
        android:fontFamily="@font/nunito_semibold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="222dp" />

    <TextView
        android:id="@+id/nameCus"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rectangle_background"
        android:backgroundTint="#A4B1A2A2"
        android:fontFamily="@font/nunito_semibold"
        android:text="Marvis Kparobo"
        android:gravity="left|center"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="222dp" />

    <TextView
        android:id="@+id/addrCus"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rectangle_background"
        android:backgroundTint="#A4B1A2A2"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:text="Km 5 refinery road oppsite re public road, effurun, delta state"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/nameCus"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="59dp" />

    <TextView
        android:id="@+id/phoneCus"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rectangle_background"
        android:backgroundTint="#A4B1A2A2"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:text="+234 9011039271"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/addrCus"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="59dp" />

    <TextView
        android:id="@+id/method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="394dp"
        tools:text="Delivery method." />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/method"
        app:layout_constraintStart_toStartOf="@+id/layoutAddress"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/radio_a"
            android:text="Door delivery"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio_b"
            android:text="Pick up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="563dp"
        tools:text="Total" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="555dp"
        tools:text="23,000" />

</androidx.constraintlayout.widget.ConstraintLayout>